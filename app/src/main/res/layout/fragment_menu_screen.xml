<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu_screen">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintBottom_toTopOf="@id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Name"
        app:titleCentered="false"
        app:titleMargin="5dp"
        app:titleTextColor="@color/purple_500" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="488dp"
        android:layout_height="270dp"
        android:layout_marginBottom="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/img_welcome"
        tools:ignore="NotSibling" />

    <ImageButton
        android:id="@+id/popup"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/menu"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/topAppBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="225dp"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/montserrat"
        android:text="Welcome"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/montserrat"
        android:text="These are the option we got for you"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="285dp"
        android:background="@drawable/box_doc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="313dp"
            android:layout_marginBottom="47dp"
            app:srcCompat="@drawable/document" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="162dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/montserrat"
            android:text="Send documents"
            android:textColor=" #FE1191"
            android:textSize="16sp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_doc"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="221dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="14dp"
            android:drawableEnd="@drawable/arrow_forward_send"
            android:fontFamily="@font/montserrat"
            android:paddingStart="20dp"
            android:text="Enter"
            android:textColor="#FE1191"
            android:textSize="10sp"
            app:backgroundTint="@color/white"
            app:cornerRadius="8dp"
            app:strokeColor="#FE1191"
            app:strokeWidth="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/box_see_doc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_see"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="221dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="14dp"
            android:drawableEnd="@drawable/arrow_forward_see"
            android:fontFamily="@font/montserrat"
            android:paddingStart="20dp"
            android:text="Enter"
            android:textColor=" #4500FF"
            android:textSize="10sp"
            app:backgroundTint="@color/white"
            app:cornerRadius="8dp"
            app:strokeColor="#4500FF"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="45dp"
            android:fontFamily="@font/montserrat"
            android:text="See documents"
            android:textColor=" #4500FF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="313dp"
            android:layout_marginBottom="47dp"
            app:srcCompat="@drawable/see_doc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/box_office"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_office"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="221dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="14dp"
            android:drawableEnd="@drawable/arrow_forward_office"
            android:fontFamily="@font/montserrat"
            android:paddingStart="20dp"
            android:text="Enter"
            android:textColor=" #05667C"
            android:textSize="10sp"
            app:backgroundTint="@color/white"
            app:cornerRadius="8dp"
            app:strokeColor="#05667C"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="31dp"
            android:fontFamily="@font/montserrat"
            android:text="Offices"
            android:textColor=" #05667C"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="313dp"
            android:layout_marginBottom="47dp"
            app:srcCompat="@drawable/location" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>